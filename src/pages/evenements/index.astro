import Layout from "../../layouts/Layout.astro";
import Breadcrumb from "../../components/ui/Breadcrumb.astro";
import CardEvent from "../../components/CardEvent.astro";

// URL de l'API WordPress pour r√©cup√©rer les √©v√©nements
const EVENTS_URL = "https://lemonpunch.spaarple.fr/wp-json/wp/v2/evenements?_embed&per_page=100";

let allEvents = [];
let totalAllEvents = 0;
let totalUpcomingEvents = 0;
let totalPastEvents = 0;

// Fonction pour formater la date depuis ACF
function formatEventDate(event) {
    // Utiliser le bon nom de champ ACF
    const eventDate = event.acf?.date_de_levenement || event.date;

    if (eventDate && typeof eventDate === 'string') {
        // Si c'est au format datetime "2025-10-16 20:30:00"
        if (eventDate.includes('-') && eventDate.includes(':')) {
            return new Date(eventDate);
        }
        // Si c'est au format YYYYMMDD
        else if (eventDate.length === 8 && !eventDate.includes('-')) {
            const year = eventDate.substring(0, 4);
            const month = eventDate.substring(4, 6);
            const day = eventDate.substring(6, 8);
            return new Date(Number(year), month - 1, day);
        }
        // Autres formats de date
        else {
            return new Date(eventDate);
        }
    }
    return null;
}

// Fonction pour formater la date en fran√ßais
function formatDateFrench(date) {
    if (!date) return null;

    const months = [
        'janvier', 'f√©vrier', 'mars', 'avril', 'mai', 'juin',
        'juillet', 'ao√ªt', 'septembre', 'octobre', 'novembre', 'd√©cembre'
    ];

    const day = date.getDate();
    const month = months[date.getMonth()];
    const year = date.getFullYear();

    return `${day} ${month} ${year}`;
}

try {
    const res = await fetch(EVENTS_URL);
    if (res.ok) {
        const data = await res.json();

        // Filtrer et valider les √©v√©nements
        allEvents = data.filter(event =>
            event &&
            event.title &&
            event.title.rendered &&
            event.slug
        ).map(event => ({
            ...event,
            eventDate: formatEventDate(event),
            formattedDate: formatDateFrench(formatEventDate(event))
        }));

        if (allEvents.length > 0) {
            const now = new Date();
            now.setHours(0, 0, 0, 0); // D√©but de la journ√©e

            // Marquer tous les √©v√©nements et les trier par date
            allEvents = allEvents
                .map(event => ({
                    ...event,
                    isPast: event.eventDate < now
                }))
                .sort((a, b) => {
                    // Les √©v√©nements √† venir en premier (par date croissante), puis les pass√©s (par date d√©croissante)
                    if (!a.isPast && b.isPast) return -1;
                    if (a.isPast && !b.isPast) return 1;
                    if (!a.isPast && !b.isPast) return a.eventDate - b.eventDate; // √Ä venir: plus proches en premier
                    return b.eventDate - a.eventDate; // Pass√©s: plus r√©cents en premier
                });

            // Stats pour les onglets
            totalAllEvents = allEvents.length;
            totalUpcomingEvents = allEvents.filter(event => !event.isPast).length;
            totalPastEvents = allEvents.filter(event => event.isPast).length;
        }
    }
} catch (error) {
    console.error('Erreur lors du chargement des √©v√©nements:', error);
}
