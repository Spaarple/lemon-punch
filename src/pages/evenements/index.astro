<script define:vars={{ allEvents }}>
    // Configuration
    const EVENTS_PER_PAGE = 5;

    // √âtat de l'application
    let currentFilter = 'all';
    let currentPage = 1;
    let filteredEvents = [];
    let totalPages = 0;

    // R√©f√©rences DOM
    const eventsTitle = document.getElementById('events-title');
    const eventsList = document.getElementById('events-list');
    const paginationContainer = document.getElementById('pagination-container');
    const pagination = document.getElementById('pagination');
    const filterTabs = document.querySelectorAll('.filter-tab');

    // Fonction pour formater la date d'affichage
    function formatDisplayDate(eventDate) {
        if (!eventDate) return { day: '??', month: 'DATE' };

        const date = new Date(eventDate);
        const day = date.getDate().toString().padStart(2, '0');
        const monthNames = ['JAN', 'F√âV', 'MAR', 'AVR', 'MAI', 'JUN',
                           'JUL', 'AO√õT', 'SEP', 'OCT', 'NOV', 'D√âC'];
        const month = monthNames[date.getMonth()];

        return { day, month };
    }

    // Fonction pour formater l'heure
    function formatTime(dateTime) {
        if (!dateTime) return null;
        const date = new Date(dateTime);
        return date.toLocaleTimeString('fr-FR', {
            hour: '2-digit',
            minute: '2-digit'
        });
    }

    // Fonction pour filtrer les √©v√©nements
    function filterEvents(filter) {
        switch (filter) {
            case 'upcoming':
                filteredEvents = allEvents.filter(event => !event.isPast);
                break;
            case 'past':
                filteredEvents = allEvents.filter(event => event.isPast);
                break;
            case 'all':
            default:
                filteredEvents = [...allEvents];
                break;
        }
    }

    // Fonction pour mettre √† jour le titre
    function updateTitle(filter) {
        const titles = {
            'all': 'Tous les √©v√©nements',
            'upcoming': '√âv√©nements √† venir',
            'past': '√âv√©nements pass√©s'
        };
        eventsTitle.textContent = titles[filter] || titles['all'];
    }

    // Fonction pour rendre un √©v√©nement
    function renderEvent(event) {
        const { day, month } = formatDisplayDate(event.eventDate);
        const time = formatTime(event.acf?.date_de_levenement);

        return `
            <div class="concert-card event-card ${event.isPast ? 'past' : ''}">
                <div class="concert-date ${event.isPast ? 'past-date' : ''}">
                    <span class="day">${day}</span>
                    <span class="month">${month}</span>
                </div>
                <div class="concert-info">
                    <h3 class="concert-venue">${event.title.rendered}</h3>
                    ${event.acf?.nom_du_lieu ? `<p class="concert-city">${event.acf.nom_du_lieu}</p>` : ''}
                    ${time ? `<p class="concert-time">${time}</p>` : ''}
                </div>
                <div class="concert-action">
                    <a href="/evenements/${event.slug}/" class="btn btn-ticket ${event.isPast ? 'past-btn' : ''}">
                        ${event.isPast ? 'Voir le r√©cap' : 'D√©tails'}
                    </a>
                </div>
            </div>
        `;
    }

    // Fonction pour rendre les √©v√©nements
    function renderEvents() {
        const startIndex = (currentPage - 1) * EVENTS_PER_PAGE;
        const endIndex = startIndex + EVENTS_PER_PAGE;
        const paginatedEvents = filteredEvents.slice(startIndex, endIndex);

        if (paginatedEvents.length === 0) {
            eventsList.innerHTML = `
                <div class="no-events-message">
                    <p>Aucun √©v√©nement trouv√© pour ce filtre.</p>
                </div>
            `;
            return;
        }

        eventsList.innerHTML = paginatedEvents.map(renderEvent).join('');
    }

    // Fonction pour rendre la pagination
    function renderPagination() {
        totalPages = Math.ceil(filteredEvents.length / EVENTS_PER_PAGE);

        if (totalPages <= 1) {
            paginationContainer.style.display = 'none';
            return;
        }

        paginationContainer.style.display = 'flex';

        let paginationHTML = '';

        // Bouton pr√©c√©dent
        if (currentPage > 1) {
            paginationHTML += `
                <button class="pagination-btn pagination-prev" data-page="${currentPage - 1}">
                    <i class="fas fa-chevron-left"></i>
                    Pr√©c√©dent
                </button>
            `;
        }

        // Num√©ros de page
        for (let i = 1; i <= totalPages; i++) {
            paginationHTML += `
                <button class="pagination-number ${i === currentPage ? 'active' : ''}" data-page="${i}">
                    ${i}
                </button>
            `;
        }

        // Bouton suivant
        if (currentPage < totalPages) {
            paginationHTML += `
                <button class="pagination-btn pagination-next" data-page="${currentPage + 1}">
                    Suivant
                    <i class="fas fa-chevron-right"></i>
                </button>
            `;
        }

        pagination.innerHTML = paginationHTML;

        // Ajouter les √©couteurs d'√©v√©nements
        pagination.querySelectorAll('[data-page]').forEach(btn => {
            btn.addEventListener('click', (e) => {
                currentPage = parseInt(e.target.closest('[data-page]').dataset.page);
                renderEvents();
                renderPagination();

                // Scroller vers le haut de la section
                document.querySelector('.filtered-events').scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            });
        });
    }

    // Fonction principale pour mettre √† jour l'affichage
    function updateDisplay() {
        filterEvents(currentFilter);
        updateTitle(currentFilter);
        currentPage = 1; // Reset √† la page 1 lors du changement de filtre
        renderEvents();
        renderPagination();
    }

    // Gestionnaires d'√©v√©nements pour les filtres
    filterTabs.forEach(tab => {
        tab.addEventListener('click', (e) => {
            e.preventDefault();

            // Mettre √† jour les √©tats actifs
            filterTabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            // Changer le filtre
            currentFilter = tab.dataset.filter;
            updateDisplay();
        });
    });

    // Initialisation
    document.addEventListener('DOMContentLoaded', () => {
        updateDisplay();
    });
</script>

