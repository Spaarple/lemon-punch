<script define:vars={{ allPosts, allCategories }}>
    // Configuration
    const ARTICLES_PER_PAGE = 9;

    // √âtat de l'application
    let currentFilter = 'all';
    let currentPage = 1;
    let filteredPosts = [];
    let totalPages = 0;

    // R√©f√©rences DOM
    const articlesTitle = document.getElementById('articles-title');
    const articlesList = document.getElementById('articles-list');
    const paginationContainer = document.getElementById('pagination-container');
    const pagination = document.getElementById('pagination');
    const filterTabs = document.querySelectorAll('.filter-tab');

    // Fonction pour filtrer les articles
    function filterPosts(filter) {
        if (filter === 'all') {
            filteredPosts = [...allPosts];
        } else {
            // Filtrer par cat√©gorie ID
            const categoryId = parseInt(filter);
            filteredPosts = allPosts.filter(post =>
                post.categories && post.categories.includes(categoryId)
            );
        }
    }

    // Fonction pour mettre √† jour le titre
    function updateTitle(filter) {
        if (filter === 'all') {
            articlesTitle.textContent = 'Tous les articles';
        } else {
            const category = allCategories.find(cat => cat.id.toString() === filter);
            articlesTitle.textContent = category ? `Articles : ${category.name}` : 'Articles';
        }
    }

    // Fonction pour rendre un article
    function renderArticle(post) {
        const coverImage = post._embedded?.['wp:featuredmedia']?.[0];
        const defaultImage = '/placeholder-article.jpg';

        // R√©cup√©rer la premi√®re cat√©gorie pour l'affichage uniquement
        const firstCategory = post.categories?.length ? allCategories.find(cat => cat.id === post.categories[0]) : null;
        const categoryName = firstCategory?.name || '';
        const articleUrl = `/blog/${post.slug}/`;

        return `
            <article class="article-card">
                <div class="article-image">
                    <img src="${coverImage?.source_url || defaultImage}"
                         alt="${coverImage.alt_text || ''}"
                         title="${coverImage.title.rendered || ''}"
                         onerror="this.src='${defaultImage}'">
                    <div class="article-overlay">
                        <a href="${articleUrl}" class="article-link">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
                <div class="article-content">
                    <div class="article-meta">
                        <span class="article-date">${post.formattedDate || 'Date inconnue'}</span>
                        ${categoryName ? `<span class="article-category">${categoryName}</span>` : ''}
                    </div>
                    <h3 class="article-title">
                        <a href="${articleUrl}">${post.title?.rendered || ''}</a>
                    </h3>
                    ${post.excerpt ? `<p class="article-excerpt">${post.excerpt}</p>` : ''}
                    <a href="${articleUrl}" class="article-read-more">
                        Lire la suite
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </article>
        `;
    }

    // Fonction pour rendre les articles
    function renderArticles() {
        const startIndex = (currentPage - 1) * ARTICLES_PER_PAGE;
        const endIndex = startIndex + ARTICLES_PER_PAGE;
        const paginatedPosts = filteredPosts.slice(startIndex, endIndex);

        if (paginatedPosts.length === 0) {
            articlesList.innerHTML = `
                <div class="no-articles-message">
                    <p>Aucun article trouv√© pour cette cat√©gorie.</p>
                </div>
            `;
            return;
        }

        articlesList.innerHTML = paginatedPosts.map(renderArticle).join('');
    }

    // Fonction pour rendre la pagination
    function renderPagination() {
        totalPages = Math.ceil(filteredPosts.length / ARTICLES_PER_PAGE);

        if (totalPages <= 1) {
            paginationContainer.style.display = 'none';
            return;
        }

        paginationContainer.style.display = 'flex';

        let paginationHTML = '';

        // Bouton pr√©c√©dent
        if (currentPage > 1) {
            paginationHTML += `
                <button class="pagination-btn pagination-prev" data-page="${currentPage - 1}">
                    <i class="fas fa-chevron-left"></i>
                    Pr√©c√©dent
                </button>
            `;
        }

        // Num√©ros de page
        for (let i = 1; i <= totalPages; i++) {
            paginationHTML += `
                <button class="pagination-number ${i === currentPage ? 'active' : ''}" data-page="${i}">
                    ${i}
                </button>
            `;
        }

        // Bouton suivant
        if (currentPage < totalPages) {
            paginationHTML += `
                <button class="pagination-btn pagination-next" data-page="${currentPage + 1}">
                    Suivant
                    <i class="fas fa-chevron-right"></i>
                </button>
            `;
        }

        pagination.innerHTML = paginationHTML;

        // Ajouter les √©couteurs d'√©v√©nements
        pagination.querySelectorAll('[data-page]').forEach(btn => {
            btn.addEventListener('click', (e) => {
                currentPage = parseInt(e.target.closest('[data-page]').dataset.page);
                renderArticles();
                renderPagination();

                // Scroller vers le haut de la section
                document.querySelector('.articles-section').scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            });
        });
    }

    // Fonction principale pour mettre √† jour l'affichage
    function updateDisplay() {
        filterPosts(currentFilter);
        updateTitle(currentFilter);
        currentPage = 1; // Reset √† la page 1 lors du changement de filtre
        renderArticles();
        renderPagination();
    }

    // Gestionnaires d'√©v√©nements pour les filtres
    filterTabs.forEach(tab => {
        tab.addEventListener('click', (e) => {
            e.preventDefault();

            // Mettre √† jour les √©tats actifs
            filterTabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            // Changer le filtre
            currentFilter = tab.dataset.filter;
            updateDisplay();
        });
    });

    // Initialisation
    document.addEventListener('DOMContentLoaded', () => {
        updateDisplay();
    });
</script>

