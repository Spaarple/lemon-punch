---
import Layout from "../../layouts/Layout.astro";
import Breadcrumb from "../../components/ui/Breadcrumb.astro";
import ArticleCard from "../../components/blog/ArticleCard.astro";

// URL de l'API WordPress pour r√©cup√©rer les articles et cat√©gories
const POSTS_URL = `${import.meta.env.BASE_URL_WORDPRESS}posts?_embed&per_page=100`;
const CATEGORIES_URL = `${import.meta.env.BASE_URL_WORDPRESS}categories?per_page=100`;

let allPosts = [];
let allCategories = [];

// Fonction pour formater la date depuis WordPress
function formatPostDate(post) {
    const postDate = post.date;
    if (postDate) {
        return new Date(postDate);
    }
    return null;
}

// Fonction pour formater la date en fran√ßais
function formatDateFrench(date) {
    if (!date) return null;

    const months = [
        'janvier', 'f√©vrier', 'mars', 'avril', 'mai', 'juin',
        'juillet', 'ao√ªt', 'septembre', 'octobre', 'novembre', 'd√©cembre'
    ];

    const day = date.getDate();
    const month = months[date.getMonth()];
    const year = date.getFullYear();

    return `${day} ${month} ${year}`;
}

// Fonction pour extraire le texte brut du contenu HTML
function extractTextFromHTML(html) {
    if (!html) return '';
    // Supprimer les balises HTML et limiter √† 200 caract√®res
    const text = html.replace(/<[^>]*>/g, '').trim();
    return text.length > 200 ? text.substring(0, 200) + '...' : text;
}

try {
    // R√©cup√©rer les articles
    const postsRes = await fetch(POSTS_URL);
    if (postsRes.ok) {
        const postsData = await postsRes.json();

        // Filtrer et valider les articles
        allPosts = postsData.filter(post =>
            post &&
            post.title &&
            post.title.rendered &&
            post.slug &&
            post.status === 'publish'
        ).map(post => ({
            ...post,
            postDate: formatPostDate(post),
            formattedDate: formatDateFrench(formatPostDate(post)),
            excerpt: extractTextFromHTML(post.content?.rendered || post.excerpt?.rendered)
        }));

        // Trier par date d√©croissante (plus r√©cents en premier)
        allPosts.sort((a, b) => b.postDate - a.postDate);
    }

    // R√©cup√©rer les cat√©gories
    const categoriesRes = await fetch(CATEGORIES_URL);
    if (categoriesRes.ok) {
        const categoriesData = await categoriesRes.json();

        // Filtrer les cat√©gories qui ont des articles et exclure "Non class√©"
        allCategories = categoriesData.filter(category =>
            category &&
            category.name &&
            category.count > 0 &&
            category.slug !== 'uncategorized'
        ).sort((a, b) => b.count - a.count); // Trier par nombre d'articles
    }
} catch (error) {
    console.error('Erreur lors du chargement des articles:', error);
}
