---
import LatestAlbumCard from '../ui/album/LatestAlbumCard.astro';
import LogoFondJaune from '../../assets/images/lmp-logo-bg-yellow.jpg';

// Récupérer le dernier album depuis WordPress
const MUSIC_URL = "https://lemonpunch.spaarple.fr/wp-json/wp/v2/album?_embed&per_page=1&orderby=date&order=desc";

let latestRelease = null;

// Fonction pour déterminer le type de sortie
function getReleaseType(release) {
    if (release.acf && release.acf.type_de_sortie) {
        return release.acf.type_de_sortie;
    }

    let trackCount = 0;
    if (release.acf) {
        for (let i = 1; i <= 20; i++) {
            if (release.acf[`liste_des_piste_${i}`]) {
                trackCount++;
            }
        }
    }

    if (trackCount <= 2) return 'Single';
    if (trackCount <= 6) return 'EP';
    return 'Album';
}

try {
    const res = await fetch(MUSIC_URL);
    if (res.ok) {
        const data = await res.json();
        if (data.length > 0) {
            latestRelease = {
                ...data[0],
                releaseType: getReleaseType(data[0])
            };
        }
    }
} catch (error) {
    console.error('Erreur lors du chargement du dernier album:', error);
}
---

<!-- Music Section -->
<section class="music-section" id="music">
    <div class="container">
        <h2 class="section-title">Music</h2>

        {latestRelease ? (
            <!-- Latest Release Card avec vraies données -->
            <div class="latest-release-container">
                <LatestAlbumCard album={latestRelease} />
            </div>
        ) : (
            <!-- Fallback message -->
            <div class="no-release-message">
                <div class="no-release-icon">
                    <i class="fas fa-music"></i>
                </div>
                <h3>Bientôt de nouveaux sons !</h3>
                <p>Nous travaillons sur notre prochaine sortie musicale. Restez connectés pour être les premiers informés !</p>
                <div class="social-follow">
                    <a href="#" class="social-link">
                        <i class="fab fa-instagram"></i> Instagram
                    </a>
                    <a href="#" class="social-link">
                        <i class="fab fa-youtube"></i> YouTube
                    </a>
                    <a href="#" class="social-link">
                        <i class="fab fa-spotify"></i> Spotify
                    </a>
                </div>
            </div>
        )}

        <!-- Link to full discography -->
        <div class="discover-more">
            <a href="/albums/" class="btn btn-discover">
                <i class="fas fa-compact-disc"></i>
                {latestRelease ? 'Découvrir toute la discographie' : 'Voir notre discographie'}
            </a>
        </div>

        <!-- Videos Subsection -->
        <div class="videos-subsection">
            <h3 class="subsection-title">Nos Clips</h3>
            <div class="video-grid">
                <a href="#" class="video-card">
                    <img src={LogoFondJaune.src} alt="Music Video Thumbnail" class="video-thumbnail">
                    <div class="video-overlay"><i class="fas fa-play"></i></div>
                    <p class="video-title">Levé du Soleil Acide (Clip Officiel)</p>
                </a>
                <a href="#" class="video-card">
                    <img src={LogoFondJaune.src} alt="Music Video Thumbnail" class="video-thumbnail">
                    <div class="video-overlay"><i class="fas fa-play"></i></div>
                    <p class="video-title">Punch Urbain (Live Session)</p>
                </a>
                <a href="#" class="video-card">
                    <img src={LogoFondJaune.src} alt="Music Video Thumbnail" class="video-thumbnail">
                    <div class="video-overlay"><i class="fas fa-play"></i></div>
                    <p class="video-title">Nuit Électrique (Visualizer)</p>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .latest-release-container {
        margin-bottom: 4rem;
    }

    /* Discover more button */
    .discover-more {
        text-align: center;
        margin: 3rem 0 4rem 0;
    }

    .btn-discover {
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        background: transparent;
        color: var(--black);
        border: 2px solid var(--black);
        padding: 14px 28px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 6px;
    }

    .btn-discover:hover {
        background: var(--primary-yellow);
        color: var(--black);
        border-color: var(--primary-yellow);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(244, 208, 63, 0.4);
    }

    .btn-discover i {
        font-size: 1.2em;
        animation: spin 3s linear infinite;
    }

    .btn-discover:hover i {
        animation-play-state: paused;
        transform: scale(1.1);
    }

    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* No release message */
    .no-release-message {
        text-align: center;
        padding: 4rem 2rem;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 12px;
        margin-bottom: 3rem;
    }

    .no-release-icon {
        font-size: 4rem;
        color: var(--primary-yellow);
        margin-bottom: 2rem;
    }

    .no-release-icon i {
        animation: bounce 2s ease-in-out infinite;
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }

    .no-release-message h3 {
        font-size: 2rem;
        font-weight: 800;
        color: var(--black);
        margin-bottom: 1rem;
    }

    .no-release-message p {
        font-size: 1.1rem;
        color: var(--gray);
        margin-bottom: 2rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .social-follow {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .social-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--black);
        color: var(--white);
        padding: 8px 16px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        border-radius: 20px;
        transition: all 0.3s ease;
    }

    .social-link:hover {
        background: var(--primary-yellow);
        color: var(--black);
        transform: translateY(-2px);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .discover-more {
            margin: 2rem 0 3rem 0;
        }

        .btn-discover {
            padding: 12px 24px;
            font-size: 0.9rem;
        }

        .no-release-message {
            padding: 3rem 1.5rem;
        }

        .no-release-message h3 {
            font-size: 1.8rem;
        }

        .social-follow {
            flex-direction: column;
            align-items: center;
            gap: 0.8rem;
        }

        .social-link {
            min-width: 150px;
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .btn-discover {
            padding: 10px 20px;
            font-size: 0.85rem;
            width: 100%;
            max-width: 300px;
        }

        .no-release-message {
            padding: 2rem 1rem;
        }

        .no-release-message h3 {
            font-size: 1.6rem;
        }
    }
</style>