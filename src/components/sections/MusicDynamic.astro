---
import AlbumDetail from '../ui/album/AlbumDetail.astro';
import LogoFondJaune from '../../assets/images/lmp-logo-bg-yellow.jpg';

// Récupérer le dernier album depuis WordPress
const MUSIC_URL = "https://lemonpunch.spaarple.fr/wp-json/wp/v2/album?_embed&per_page=1&orderby=date&order=desc";

let latestRelease = null;

// Fonction pour déterminer le type de sortie
function getReleaseType(release) {
    if (release.acf && release.acf.type_de_sortie) {
        return release.acf.type_de_sortie;
    }

    let trackCount = 0;
    if (release.acf) {
        for (let i = 1; i <= 20; i++) {
            if (release.acf[`liste_des_piste_${i}`]) {
                trackCount++;
            }
        }
    }

    if (trackCount <= 2) return 'Single';
    if (trackCount <= 6) return 'EP';
    return 'Album';
}

try {
    const res = await fetch(MUSIC_URL);
    if (res.ok) {
        const data = await res.json();
        if (data.length > 0) {
            latestRelease = {
                ...data[0],
                releaseType: getReleaseType(data[0])
            };
        }
    }
} catch (error) {
    console.error('Erreur lors du chargement du dernier album:', error);
}
---

<!-- Music Section -->
<section class="music-section" id="music">
    <div class="container">
        <h2 class="section-title">Music</h2>

        {latestRelease ? (
            <!-- Latest Release Card avec vraies données -->
            <AlbumDetail
                album={latestRelease}
                variant="compact"
                showTitle={false}
            />
        ) : (
            <!-- Fallback vers l'ancien contenu statique -->
            <div class="latest-release">
                <div class="latest-release-art">
                    <div class="release-image placeholder">
                        <span>Pas d'album disponible</span>
                    </div>
                    <div class="play-overlay">
                        <i class="fas fa-play"></i>
                    </div>
                </div>
                <div class="latest-release-info">
                    <span class="release-badge">BIENTÔT</span>
                    <h3 class="release-title">Nouvel Album</h3>
                    <p class="release-description">Notre prochain album sera bientôt disponible ! Restez connectés pour ne rien manquer.</p>
                </div>
            </div>
        )}

        <!-- Link to full discography -->
        {latestRelease && (
            <div class="discover-more">
                <a href="/albums/" class="btn btn-discover">
                    <i class="fas fa-compact-disc"></i>
                    Découvrir toute la discographie
                </a>
            </div>
        )}

        <!-- Videos Subsection -->
        <div class="videos-subsection">
            <h3 class="subsection-title">Nos Clips</h3>
            <div class="video-grid">
                <a href="#" class="video-card">
                    <img src={LogoFondJaune.src} alt="Music Video Thumbnail" class="video-thumbnail">
                    <div class="video-overlay"><i class="fas fa-play"></i></div>
                    <p class="video-title">Levé du Soleil Acide (Clip Officiel)</p>
                </a>
                <a href="#" class="video-card">
                    <img src={LogoFondJaune.src} alt="Music Video Thumbnail" class="video-thumbnail">
                    <div class="video-overlay"><i class="fas fa-play"></i></div>
                    <p class="video-title">Punch Urbain (Live Session)</p>
                </a>
                <a href="#" class="video-card">
                    <img src={LogoFondJaune.src} alt="Music Video Thumbnail" class="video-thumbnail">
                    <div class="video-overlay"><i class="fas fa-play"></i></div>
                    <p class="video-title">Nuit Électrique (Visualizer)</p>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Styles spécifiques à cette section qui complètent les composants */
    .discover-more {
        text-align: center;
        margin: 3rem 0 4rem 0;
    }

    .btn-discover {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: transparent;
        color: var(--black);
        border: 2px solid var(--black);
        padding: 12px 24px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 4px;
    }

    .btn-discover:hover {
        background: var(--primary-yellow);
        color: var(--black);
        border-color: var(--primary-yellow);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(244, 208, 63, 0.4);
    }

    .btn-discover i {
        font-size: 1.1em;
        animation: spin 2s linear infinite;
    }

    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .btn-discover:hover i {
        animation-play-state: paused;
    }

    /* Placeholder pour quand il n'y a pas d'album */
    .release-image.placeholder {
        width: 300px;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--light-gray);
        color: var(--gray);
        border: 2px dashed var(--gray);
        border-radius: 10px;
        font-weight: 600;
    }

    .latest-release {
        display: flex;
        gap: 3rem;
        align-items: flex-start;
        margin-bottom: 4rem;
    }

    .latest-release-art {
        position: relative;
        flex-shrink: 0;
    }

    .latest-release-info {
        flex: 1;
    }

    .release-badge {
        display: inline-block;
        background: var(--primary-yellow);
        color: var(--black);
        padding: 6px 12px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 4px;
        margin-bottom: 1rem;
    }

    .release-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--black);
        margin: 0.5rem 0;
        line-height: 1.2;
    }

    .release-description {
        font-size: 1.1rem;
        line-height: 1.7;
        color: var(--gray);
        margin-bottom: 2rem;
    }

    .play-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.4s ease;
        cursor: pointer;
    }

    .latest-release-art:hover .play-overlay {
        opacity: 1;
    }

    .play-overlay i {
        font-size: 3rem;
        color: var(--white);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .latest-release {
            flex-direction: column;
            gap: 2rem;
            text-align: center;
        }

        .release-image.placeholder {
            width: 280px;
            height: 280px;
            margin: 0 auto;
        }

        .release-title {
            font-size: 2rem;
        }

        .discover-more {
            margin: 2rem 0 3rem 0;
        }
    }

    @media (max-width: 480px) {
        .release-image.placeholder {
            width: 250px;
            height: 250px;
        }

        .release-title {
            font-size: 1.8rem;
        }

        .btn-discover {
            padding: 10px 20px;
            font-size: 0.9rem;
        }
    }
</style>