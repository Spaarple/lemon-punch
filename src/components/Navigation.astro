---
// src/components/Navigation.astro
import Logo from '../assets/images/lmp-logo-transparent-black.png';
---

<nav class="nav-basic">
    <div class="nav-container">
        <div class="nav-logo">
            <img src={Logo.src} alt="LemonPunch Logo" class="logo">
        </div>
        <div class="nav-menu" id="nav-menu">
            <a href="/" class="nav-link">HOME</a>
            <a href="/#music" class="nav-link">MUSIC</a>
            <a href="/produits" class="nav-link">SHOP</a>
            <a href="/#concerts" class="nav-link">VIDEOS</a>
            <a href="/#contact" class="nav-link">CONTACT</a>
        </div>
        <div class="social-nav">
            <a href="#" class="social-nav-link"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-nav-link"><i class="fab fa-facebook"></i></a>
            <a href="#" class="social-nav-link"><i class="fab fa-twitter"></i></a>
            <a href="#" class="social-nav-link"><i class="fab fa-youtube"></i></a>
            <a href="#" class="social-nav-link"><i class="fab fa-spotify"></i></a>
        </div>
        <div class="nav-toggle" id="nav-toggle">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
    </div>
</nav>

<style>
.nav-basic {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(238, 238, 238, 0.95);
    backdrop-filter: blur(15px);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
    height: 80px;
}

.nav-logo {
    flex-shrink: 0;
}

.nav-logo .logo {
    height: 60px;
    width: auto;
    transition: transform 0.3s ease;
}

.nav-logo .logo:hover {
    transform: scale(1.05);
}

.nav-menu {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav-link {
    text-decoration: none;
    color: var(--black);
    font-family: var(--font-condensed);
    font-weight: 600;
    font-size: 1.1rem;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    position: relative;
}

.nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -5px;
    left: 50%;
    background: var(--primary);
    transition: all 0.3s ease;
    transform: translateX(-50%);
}

.nav-link:hover::after {
    width: 100%;
}

.nav-link:hover {
    color: var(--primary);
    transform: translateY(-2px);
}

.social-nav {
    display: flex;
    gap: 1rem;
}

.social-nav-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--black);
    color: var(--white);
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 1.2rem;
}

.social-nav-link:hover {
    background: var(--primary);
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.nav-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 4px;
}

.nav-toggle .bar {
    width: 25px;
    height: 3px;
    background: var(--black);
    transition: all 0.3s ease;
}

/* Tablette et écrans moyens */
@media (max-width: 1024px) {
    .nav-menu {
        gap: 1.5rem;
    }

    .nav-link {
        font-size: 1rem;
    }

    .social-nav {
        gap: 0.8rem;
    }

    .social-nav-link {
        width: 35px;
        height: 35px;
        font-size: 1rem;
    }
}

/* Mobile styles */
@media (max-width: 768px) {
    .nav-container {
        padding: 0 1rem;
    }

    .nav-menu {
        position: fixed;
        top: 80px;
        left: -100%;
        width: 100%;
        height: calc(100vh - 80px);
        background: rgba(244, 208, 63, 0.98);
        backdrop-filter: blur(10px);
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding-top: 2rem;
        transition: left 0.3s ease;
        gap: 1.5rem;
        box-shadow: 0 10px 27px rgba(0, 0, 0, 0.1);
    }

    .nav-menu.active {
        left: 0;
    }

    .nav-link {
        font-size: 1.3rem;
        padding: 1rem 0;
    }

    .social-nav {
        display: none;
    }

    .nav-toggle {
        display: flex;
    }
}

/* Très petits écrans */
@media (max-width: 480px) {
    .nav-container {
        padding: 0 15px;
    }

    .nav-logo .logo {
        height: 50px;
    }

    .nav-link {
        font-size: 1.2rem;
    }
}
</style>