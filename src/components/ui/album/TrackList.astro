---
export interface Props {
    tracks: string[];
    title?: string;
    numbered?: boolean;
    variant?: 'compact' | 'expanded';
}

const {
    tracks,
    title = "Liste des pistes",
    numbered = true,
    variant = 'expanded'
} = Astro.props;
---

{tracks.length > 0 && (
    <div class={`tracklist ${variant}`}>
        <h4 class="tracklist-title">{title}</h4>
        <ul class="tracks">
            {tracks.map((trackTitle, index) => (
                <li class="track-item">
                    {numbered && <span class="track-number">{index + 1}.</span>}
                    <span class="track-title">{trackTitle}</span>
                </li>
            ))}
        </ul>
    </div>
)}

<style>
    .tracklist {
        margin: 2rem 0;
    }

    .tracklist-title {
        font-weight: 700;
        margin-bottom: 1.2rem;
        color: var(--black);
        font-size: 1.3rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
        padding-bottom: 0.5rem;
    }

    .tracklist-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 3px;
        background: var(--primary-yellow);
        border-radius: 2px;
    }

    .tracks {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .track-item {
        display: flex;
        align-items: center;
        padding: 0.8rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        position: relative;
    }

    .track-item:last-child {
        border-bottom: none;
    }

    .track-item:hover {
        background: rgba(244, 208, 63, 0.05);
        transform: translateX(5px);
        padding-left: 10px;
    }

    .track-number {
        font-weight: 700;
        margin-right: 1rem;
        min-width: 30px;
        font-size: 1rem;
    }

    .track-title {
        color: var(--black);
        font-weight: 500;
        font-size: 1.1rem;
        line-height: 1.4;
        flex: 1;
    }

    /* Compact variant */
    .tracklist.compact {
        margin: 1.5rem 0;
    }

    .tracklist.compact .tracklist-title {
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .tracklist.compact .track-item {
        padding: 0.6rem 0;
    }

    .tracklist.compact .track-number {
        font-size: 0.9rem;
        margin-right: 0.8rem;
        min-width: 25px;
    }

    .tracklist.compact .track-title {
        font-size: 1rem;
    }

    /* Expanded variant with more visual flair */
    .tracklist.expanded .track-item {
        padding: 1rem 0;
    }

    .tracklist.expanded .track-item:hover::before {
        width: 40px;
    }

    .tracklist.expanded .track-number {
        font-size: 1.1rem;
        color: var(--primary-yellow);
        padding: 4px 8px;
        border-radius: 4px;
        min-width: auto;
    }

    .tracklist.expanded .track-title {
        font-size: 1.2rem;
        margin-left: 0.5rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .tracklist-title {
            font-size: 1.2rem;
            text-align: left;
        }

        .tracklist-title::after {
            left: 0;
        }

        .track-item {
            justify-content: flex-start;
        }

        .track-title {
            font-size: 1rem;
            text-align: left;
        }

        .track-number {
            font-size: 0.9rem;
            margin-right: 0.8rem;
            min-width: 25px;
        }

        .tracklist.expanded .track-number {
            font-size: 1rem;
            padding: 3px 6px;
        }

        .tracklist.expanded .track-title {
            font-size: 1.1rem;
            text-align: left;
        }
    }

    @media (max-width: 480px) {
        .tracklist-title {
            font-size: 1.1rem;
            margin-bottom: 1rem;
            text-align: left;
        }

        .track-item {
            padding: 0.7rem 0;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start;
        }

        .track-title {
            font-size: 0.95rem;
            text-align: left;
        }

        .track-number {
            font-size: 0.85rem;
            margin-right: 0.6rem;
            min-width: 22px;
        }

        .tracklist.expanded .track-number {
            font-size: 0.9rem;
            padding: 2px 5px;
        }

        .tracklist.expanded .track-title {
            font-size: 1rem;
            text-align: left;
        }

        .track-item:hover {
            transform: none;
            padding-left: 5px;
        }
    }
</style>